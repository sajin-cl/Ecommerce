<div class="container bg-light shadow p-3 text-center ">
  <table class="table table-bordered align-middle mt-4 bg-light table-hover">
    <caption class="caption-top p-2 mb-5">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="m-0">Products</h5>
        <a href="/admin/addproduct" class="btn btn-success">Add New product</a>
      </div>
    </caption>
    <thead>
      <tr>
        <th>Image</th>
        <th>Category</th>
        <th>Sub category</th>
        <th>product</th>
        <th>Description</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each prodData}}
      <tr>
        <td>
          <img src="/images/{{this.prodImage}}" alt="" style="height: 120px; width:100px; object-fit:contain">
        </td>
        <td>{{this.categoryData.category}}</td>
        <td>{{this.subCategoryData.subCategory}}</td>
        <td>{{this.product}}</td>
        <td class="product-desc">{{this.desc}}</td>
        <td class="text-success">&#8377;{{this.price}}</td>
        
        <td class="text-center">
          <a class="btn btn-primary px-2 py-0 me-1" href="/admin/product/edit/{{this._id}}"><small>Edit</small></a>
          <a class="btn btn-danger px-2 py-0" href="/admin/product/delete/{{this._id}}"><small>Delete</small></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>