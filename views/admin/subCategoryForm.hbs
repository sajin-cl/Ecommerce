<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg p-4 rounded-4">
        <h3 class="text-center mb-4">Add sub category</h3>

        <form method="post" action="" enctype="multipart/form-data">

          <div class="mb-3">
            <label for="prodCategory" class="form-label text-primary">Category</label>
            <select name="prodCategory" id="prodCategory" class="form-select">
              <option value="">select category</option>
              
              {{#each catData}}
              <option value="{{this._id}}">{{this.category}}</option>
              {{/each}}
            </select>
          </div>

          <div class="mb-3">
            <label for="prodSubCategory" class="form-label text-primary">Sub category</label>
            <input type="text" name="prodSubCategory" id="prodSubCategory" class="form-control"
              placeholder="Enter the category">
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg " id="atr-submit-btn">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

